        initialView: 'dayGridMonth',
        events: [
            {% for event in events %}
            {
                title: '{{ event.title }}',
                start: '{{ event.start }}',
                end: '{{ event.end }}',
                extendedProps: {
                    city_name: '{{ event.city_name }}',
                    weather: '{{ event.weather }}',
                    temperature: '{{ event.temperature }}'
                }
            },
            {% endfor %}
        ],
        eventDidMount: function(info) {
            console.log(info.event);  // Check if events are being processed here
            var tooltipContent = `
                <strong>City:</strong> ${info.event.extendedProps.city_name || 'N/A'}<br>
                <strong>Weather:</strong> ${info.event.extendedProps.weather || 'N/A'}<br>
                <strong>Temperature:</strong> ${info.event.extendedProps.temperature || 'N/A'}Â°C
            `;
            tippy(info.el, {
                content: tooltipContent,
                placement: 'top',
                theme: 'light-border',
                arrow: true,
            });
        }
    });
    calendar.render();
});
</script>

